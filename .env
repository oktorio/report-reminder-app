# === SMTP settings ===
SMTP_HOST=smtp.office365.com
SMTP_PORT=587
SMTP_USERNAME=your.email@domain.com
SMTP_PASSWORD=your_app_password_or_password
SMTP_USE_TLS=true
SENDER_NAME=OJK Supervisor
SENDER_EMAIL=your.email@domain.com

# If true, emails won't be sent; they will be logged to console only.
EMAIL_DRY_RUN=true

# === App settings ===
FLASK_SECRET_KEY=change-this-secret
DATABASE_URL=sqlite:///data.db
APP_TZ=Asia/Jakarta

# Default reminder offsets in days (comma-separated). Used when schedule has no custom offsets.
DEFAULT_REMINDER_OFFSETS=7,3,1,0

# When the daily reminder job runs (24h format, local TZ)
DAILY_JOB_HOUR=8
DAILY_JOB_MINUTE=0
